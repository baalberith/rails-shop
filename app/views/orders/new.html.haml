%h2 Order form

%p
  %strong Total cost:    
  = cart_value(@cart)

= form_for @order do |f|
  - if @order.errors.any?
    Errors:
    %ul
    - @order.errors.full_messages.each do |msg|
      %li= msg
  %p    
    Name:
    %br
    = f.text_field :name
    %br
    Address:
    %br
    = f.text_area :address

  = f.submit "Order"
